{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2021"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "types": ["node", "express", "jest", "uuid"],
    "noImplicitAny": true
  },
  "include": ["src/**/*"]
}
